@model QLTTDT.Models.VaiTro

@{
    ViewData["Title"] = "Xoá vai trò";
}

<div class="mb-3">
    <h4 class="fw-bold">Xoá vai trò</h4>
    <hr />
</div>

<div class="card bg-white shadow p-4 rounded">
    <p class="text-danger fw-semibold">Bạn có chắc chắn muốn xoá vai trò này không?</p>

    <dl class="row mb-0">
        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">Tên vai trò</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TenVaiTro)</dd>
        </div>
    </dl>

    <form asp-action="Delete" class="d-flex justify-content-end column-gap-2 mt-4">
        <input type="hidden" asp-for="MaVaiTro" />
        <button type="submit" class="admin-delete-submit">Xoá vai trò</button>
        <a asp-action="Index" class="admin-back-btn">Quay lại danh sách</a>
    </form>
</div>
