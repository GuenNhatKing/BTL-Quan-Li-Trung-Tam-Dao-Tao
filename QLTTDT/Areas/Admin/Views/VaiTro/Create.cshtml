@model QLTTDT.Models.VaiTro

@{
    ViewData["Title"] = "Tạo vai trò mới";
}

<h4 class="admin-create-title">Tạo vai trò mới</h4>
<hr />

<div class="admin-create-container">
    <form asp-action="Create" class="admin-create-form">

        <div asp-validation-summary="ModelOnly" class="text-danger admin-create-validation"></div>

        <div class="form-group admin-create-group">
            <label asp-for="TenVaiTro" class="admin-create-label">Tên vai trò</label>
            <input asp-for="TenVaiTro" class="admin-create-input" />
            <span asp-validation-for="TenVaiTro" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <input type="submit" value="Tạo mới" class="admin-create-submit" />
            <a asp-action="Index" class="admin-create-back">← Quay lại danh sách</a>
        </div>

    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
