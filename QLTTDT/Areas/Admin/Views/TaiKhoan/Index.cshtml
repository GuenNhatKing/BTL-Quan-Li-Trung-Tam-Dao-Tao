@model IEnumerable<QLTTDT.Models.TaiKhoan>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDangNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaNguoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaVaiTro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDangNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                <a asp-controller="NguoiDung" asp-action="Details" asp-route-id="@item.MaNguoiDungNavigation.MaNguoiDung">
                    @Html.DisplayFor(modelItem => item.MaNguoiDungNavigation.Email)
                </a>
            </td>
            <td>
                <a asp-controller="VaiTro" asp-action="Details" asp-route-id="@item.MaVaiTroNavigation.MaVaiTro">
                    @Html.DisplayFor(modelItem => item.MaVaiTroNavigation.TenVaiTro)
                </a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaTaiKhoan">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaTaiKhoan">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaTaiKhoan">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
