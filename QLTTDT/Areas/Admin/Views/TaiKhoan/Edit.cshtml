@model QLTTDT.Models.TaiKhoan

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
}

<h4 class="admin-create-title">Chỉnh sửa tài khoản</h4>
<hr />

<div class="admin-create-container">
    <form asp-action="Edit" class="admin-create-form">
        <div asp-validation-summary="ModelOnly" class="text-danger admin-create-validation"></div>
        <input type="hidden" asp-for="MaTaiKhoan" />

        <div class="form-group admin-create-group">
            <label for="MaNguoiDung" class="admin-create-label">Mã người dùng</label>
            <input name="MaNguoiDung" class="admin-create-input" value="@ViewBag.MaNguoiDung" readonly />
            <span asp-validation-for="MaNguoiDung" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label for="MaVaiTro" class="admin-create-label">Mã vai trò</label>
            <input name="MaVaiTro" class="admin-create-input" value="@ViewBag.MaVaiTro" readonly />
            <span asp-validation-for="MaVaiTro" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="TenDangNhap" class="admin-create-label">Tên đăng nhập</label>
            <input asp-for="TenDangNhap" class="admin-create-input" />
            <span asp-validation-for="TenDangNhap" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label for="MatKhauMoi" class="admin-create-label">Mật khẩu mới</label>
            <input name="MatKhauMoi" class="admin-create-input" />
        </div>

        <div class="form-group admin-create-group">
            <input type="submit" value="Lưu thay đổi" class="admin-create-submit" />
            <a asp-action="Index" class="admin-create-back">← Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
