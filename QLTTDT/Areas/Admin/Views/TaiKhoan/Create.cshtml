@model QLTTDT.Models.TaiKhoan

@{
    ViewData["Title"] = "Thêm mới tài khoản";
}

<h4 class="admin-create-title">Thêm mới tài khoản</h4>
<hr />

<div class="admin-create-container">
    <form asp-action="Create" enctype="multipart/form-data" class="admin-create-form">

        <div asp-validation-summary="ModelOnly" class="text-danger admin-create-validation"></div>

        <div class="form-group admin-create-group">
            <label asp-for="MaNguoiDung" class="admin-create-label">Người dùng</label>
            <select asp-for="MaNguoiDung" class="admin-create-select" asp-items="ViewBag.MaNguoiDung"></select>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="MaVaiTro" class="admin-create-label">Vai trò</label>
            <select asp-for="MaVaiTro" class="admin-create-select" asp-items="ViewBag.MaVaiTro"></select>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="TenDangNhap" class="admin-create-label">Tên đăng nhập</label>
            <input asp-for="TenDangNhap" class="admin-create-input" />
            <span asp-validation-for="TenDangNhap" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="MatKhau" class="admin-create-label">Mật khẩu</label>
            <input asp-for="MatKhau" type="password" class="admin-create-input" />
            <span asp-validation-for="MatKhau" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <input type="submit" value="Tạo mới" class="admin-create-submit" />
            <a asp-action="Index" class="admin-create-back">← Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
