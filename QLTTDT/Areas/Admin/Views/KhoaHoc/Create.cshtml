@model QLTTDT.Models.KhoaHoc

@{
    ViewData["Title"] = "Thêm mới khoá học";
}

<h4 class="admin-create-title">Thêm mới khoá học</h4>
<hr />

<div class="admin-create-container">
    <form asp-action="Create" enctype="multipart/form-data" class="admin-create-form">

        <div asp-validation-summary="ModelOnly" class="text-danger admin-create-validation"></div>

        <div class="form-group admin-create-group">
            <label asp-for="MaGiangVien" class="admin-create-label">Giảng viên</label>
            <select asp-for="MaGiangVien" class="admin-create-select" asp-items="ViewBag.MaGiangVien"></select>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="MaChuDe" class="admin-create-label">Chủ đề</label>
            <select asp-for="MaChuDe" class="admin-create-select" asp-items="ViewBag.MaChuDe"></select>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="MaCapDo" class="admin-create-label">Cấp độ</label>
            <select asp-for="MaCapDo" class="admin-create-select" asp-items="ViewBag.MaCapDo"></select>
        </div>

        <div class="admin-create-image-wrapper">
            <label for="AnhKhoaHoc" class="admin-create-label">Ảnh khoá học</label>
            <div class="admin-create-image-container">
                <input name="AnhKhoaHoc" type="file" onchange="readImage(this);" class="form-control" />
                <div class="admin-create-preview-cover">
                    <img id="uploadedImage" src="#" class="admin-create-preview" style="display: none;" />
                </div>
            </div>
            <span asp-validation-for="UrlAnh"
                  class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="TenKhoaHoc" class="admin-create-label">Tên khoá học</label>
            <input asp-for="TenKhoaHoc" class="admin-create-input" />
            <span asp-validation-for="TenKhoaHoc" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="MoTa" class="admin-create-label">Mô tả</label>
            <textarea asp-for="MoTa" class="admin-create-textarea" rows="4"></textarea>
            <span asp-validation-for="MoTa" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="ThoiGianKhaiGiang" class="admin-create-label">Thời gian khai giảng</label>
            <input asp-for="ThoiGianKhaiGiang" type="datetime-local" class="admin-create-input" />
            <span asp-validation-for="ThoiGianKhaiGiang" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="HocPhi" class="admin-create-label">Học phí</label>
            <input asp-for="HocPhi" class="admin-create-input" />
            <span asp-validation-for="HocPhi" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="SoLuongHocVienToiDa" class="admin-create-label">Số lượng học viên tối đa</label>
            <input asp-for="SoLuongHocVienToiDa" class="admin-create-input" />
            <span asp-validation-for="SoLuongHocVienToiDa" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <input type="submit" value="Tạo mới" class="admin-create-submit" />
            <a asp-action="Index" class="admin-create-back">← Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
