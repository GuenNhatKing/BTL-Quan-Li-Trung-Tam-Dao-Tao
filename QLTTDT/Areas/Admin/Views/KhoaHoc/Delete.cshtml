@model QLTTDT.Models.KhoaHoc

<div class="mb-3">
	<h4 class="fw-bold">Xoá khoá học</h4>
	<hr />
</div>

<div class="card bg-white shadow p-4 rounded">
	<p class="text-danger fw-semibold">Bạn có chắc chắn muốn xoá khoá học này không?</p>

	<dl class="row mb-0">

		<div class="row mb-3 border-bottom pb-2">
			<dt class="col-sm-3 fw-bold">Ảnh khoá học</dt>
			<dd class="col-sm-9">
				<img src="@Url.Content("~/images/" + Model.UrlAnh)" alt="Ảnh khoá học" class="img-thumbnail mb-2" style="max-width: 300px;" />
				@Html.DisplayFor(model => model.UrlAnh)
			</dd>
		</div>

		<div class="row mb-3 border-bottom pb-2">
			<dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.TenKhoaHoc)</dt>
			<dd class="col-sm-9">@Html.DisplayFor(m => m.TenKhoaHoc)</dd>
		</div>

		<div class="row mb-3 border-bottom pb-2">
			<dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.MoTa)</dt>
			<dd class="col-sm-9 white-space-pre-line">@Html.DisplayFor(m => m.MoTa)</dd>
		</div>

		<div class="row mb-3 border-bottom pb-2">
			<dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.ThoiGianKhaiGiang)</dt>
			<dd class="col-sm-9">@Model.ThoiGianKhaiGiang.ToString("dd/MM/yyyy")</dd>
		</div>

		<div class="row mb-3 border-bottom pb-2">
			<dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.HocPhi)</dt>
			<dd class="col-sm-9">@String.Format("{0:N0} ₫", Model.HocPhi)</dd>
		</div>

		<div class="row mb-3 border-bottom pb-2">
			<dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.SoLuongHocVienToiDa)</dt>
			<dd class="col-sm-9">@Html.DisplayFor(m => m.SoLuongHocVienToiDa)</dd>
		</div>

		<div class="row mb-3 border-bottom pb-2">
			<dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MaCapDo)</dt>
			<dd class="col-sm-9">
				<a asp-controller="CapDo" asp-action="Details" asp-route-id="@Model.MaCapDoNavigation.MaCapDo"
				   class="dashboard-link--highlight">
					@Html.DisplayFor(model => model.MaCapDoNavigation.TenCapDo)
				</a>
			</dd>
		</div>

		<div class="row mb-3 border-bottom pb-2">
			<dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MaChuDe)</dt>
			<dd class="col-sm-9">
				<a asp-controller="ChuDe" asp-action="Details" asp-route-id="@Model.MaChuDeNavigation.MaChuDe"
				   class="dashboard-link--highlight">
					@Html.DisplayFor(model => model.MaChuDeNavigation.TenChuDe)
				</a>
			</dd>
		</div>

		<div class="row mb-3 border-bottom pb-2">
			<dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MaGiangVien)</dt>
			<dd class="col-sm-9">
				<a asp-controller="NguoiDung" asp-action="Details" asp-route-id="@Model.MaGiangVienNavigation.MaNguoiDung"
				   class="dashboard-link--highlight">
					@Html.DisplayFor(model => model.MaGiangVienNavigation.Email)
				</a>
			</dd>
		</div>
	</dl>

	<form asp-action="Delete" class="d-flex justify-content-end column-gap-2 mt-4">
		<input type="hidden" asp-for="MaKhoaHoc" />

		<button type="submit" class="admin-delete-submit">
			Xoá khoá học
		</button>

		<a asp-action="Index" class="admin-back-btn">
			Quay lại danh sách
		</a>
	</form>
</div>
