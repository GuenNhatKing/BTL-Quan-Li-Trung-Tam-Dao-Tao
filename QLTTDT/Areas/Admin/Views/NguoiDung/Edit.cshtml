@model QLTTDT.Models.NguoiDung

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<h4 class="admin-create-title">Chỉnh sửa người dùng</h4>
<hr />

<div class="admin-create-container">
    <form asp-action="Edit" enctype="multipart/form-data" class="admin-create-form">
        <div asp-validation-summary="ModelOnly" class="text-danger admin-create-validation"></div>
        <input type="hidden" asp-for="MaNguoiDung" />
        <input type="hidden" asp-for="UrlAnhDaiDien" />

        <div class="admin-create-image-wrapper">
            <label for="AnhDaiDien" class="admin-create-label">Ảnh đại diện</label>
            <div class="admin-create-image-container">
                <input name="AnhDaiDien" type="file" onchange="readImage(this);" class="form-control" />
                <div class="admin-create-preview-cover">
                    <img id="uploadedImage"
                         src="@Url.Content("~/images/" + Model.UrlAnhDaiDien)"
                         class="admin-create-preview"
                         style="@(string.IsNullOrEmpty(Model.UrlAnhDaiDien) ? "display: none;" : "display: block;")"
                         alt="Ảnh đại diện" />
                </div>
            </div>
            <span asp-validation-for="UrlAnhDaiDien" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="HoVaTen" class="admin-create-label">Họ và tên</label>
            <input asp-for="HoVaTen" class="admin-create-input" />
            <span asp-validation-for="HoVaTen" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="NgaySinh" class="admin-create-label">Ngày sinh</label>
            <input asp-for="NgaySinh" type="date" class="admin-create-input" />
            <span asp-validation-for="NgaySinh" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="SoDienThoai" class="admin-create-label">Số điện thoại</label>
            <input asp-for="SoDienThoai" class="admin-create-input" />
            <span asp-validation-for="SoDienThoai" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="Email" class="admin-create-label">Email</label>
            <input asp-for="Email" class="admin-create-input" />
            <span asp-validation-for="Email" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <input type="submit" value="Lưu thay đổi" class="admin-create-submit" />
            <a asp-action="Index" class="admin-create-back">← Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}