@model QLTTDT.Models.NguoiDung

<div class="mb-3">
    <h4 class="fw-bold">Xoá người dùng</h4>
    <hr />
</div>

<div class="card bg-white shadow p-4 rounded">
    <p class="text-danger fw-semibold">Bạn có chắc chắn muốn xoá người dùng này không?</p>

    <dl class="row mb-0">

        @* Display Image - Using Model.UrlAnhDaiDien property *@
        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">Ảnh đại diện</dt>
            <dd class="col-sm-9">
                <img src="@Url.Content("~/images/" + Model.UrlAnhDaiDien)" alt="Ảnh đại diện" class="img-thumbnail mb-2" style="max-width: 300px;" />
                @Html.DisplayFor(model => model.UrlAnhDaiDien)
            </dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.HoVaTen)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.HoVaTen)</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.NgaySinh)</dt>
            @* Formatting Date *@
            <dd class="col-sm-9">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.SoDienThoai)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.SoDienThoai)</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Email)</dd>
        </div>

        @* Add other relevant properties if needed (e.g., VaiTro) *@

    </dl>

    <form asp-action="Delete" class="d-flex justify-content-end column-gap-2 mt-4">
        <input type="hidden" asp-for="MaNguoiDung" />

        <button type="submit" class="admin-delete-submit">
            Xoá người dùng
        </button>

        <a asp-action="Index" class="admin-back-btn">
            Quay lại danh sách
        </a>
    </form>
</div>