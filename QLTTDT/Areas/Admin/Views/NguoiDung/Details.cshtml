@model QLTTDT.Models.NguoiDung
@{
    ViewData["Title"] = "Chi tiết người dùng";
}
<div class="mb-3">
    <h4 class="fw-bold">Chi tiết người dùng</h4>
    <hr />
</div>

<div class="card bg-white shadow p-4 rounded">
    <dl class="row mb-0">

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">Ảnh đại diện</dt>
            <dd class="col-sm-9">
                <div class="graphic-cover mb-2">
                    <img src="@Url.Content("~/images/" + Model.UrlAnhDaiDien)" alt="Ảnh đại diện" class="img-thumbnail" style="max-width: 300px;" />
                </div>
                @Html.DisplayFor(model => model.UrlAnhDaiDien)
            </dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">Họ và tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HoVaTen)</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">Ngày sinh</dt>
            <dd class="col-sm-9">@Model.ThoiGianCompute</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">Số điện thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.SoDienThoai)</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        </div>
    </dl>

    <div class="d-flex justify-content-end column-gap-2 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.MaNguoiDung" class="admin-create-submit">
            Chỉnh sửa
        </a>
        <a asp-action="Index" class="admin-back-btn">
            Quay lại danh sách
        </a>
    </div>
</div>