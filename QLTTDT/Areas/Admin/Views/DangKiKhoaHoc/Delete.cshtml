@model QLTTDT.Models.DangKiKhoaHoc

<div class="mb-3">
    <h4 class="fw-bold">Xoá đăng kí khoá học</h4>
    <hr />
</div>

<div class="card bg-white shadow p-4 rounded">
    <p class="text-danger fw-semibold">Bạn có chắc chắn muốn xoá đăng kí khoá học này không?</p>

    <dl class="row mb-0">

        @* Assuming MaHocVienNavigation is of type NguoiDung and has MaNguoiDung and Email *@
        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MaHocVien)</dt>
            <dd class="col-sm-9">
                @if (Model.MaHocVienNavigation != null)
                {
                    <a asp-controller="NguoiDung" asp-action="Details" asp-route-id="@Model.MaHocVienNavigation.MaNguoiDung"
                       class="dashboard-link--highlight">
                        @Html.DisplayFor(model => model.MaHocVienNavigation.Email)
                    </a>
                }
                else
                {
                    @Html.DisplayFor(model => model.MaHocVien) @* Fallback to ID if navigation property is null *@
                }
            </dd>
        </div>

        @* Assuming MaKhoaHocNavigation is of type KhoaHoc and has MaKhoaHoc and TenKhoaHoc *@
        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MaKhoaHoc)</dt>
            <dd class="col-sm-9">
                @if (Model.MaKhoaHocNavigation != null)
                {
                    <a asp-controller="KhoaHoc" asp-action="Details" asp-route-id="@Model.MaKhoaHocNavigation.MaKhoaHoc"
                       class="dashboard-link--highlight">
                        @Html.DisplayFor(model => model.MaKhoaHocNavigation.TenKhoaHoc)
                    </a>
                }
                else
                {
                    @Html.DisplayFor(model => model.MaKhoaHoc) @* Fallback to ID if navigation property is null *@
                }
            </dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.HocPhi)</dt>
            <dd class="col-sm-9">@String.Format("{0:N0} ₫", Model.HocPhi)</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.ThoiGianDangKi)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ThoiGianDangKi)@* Reverted to DisplayFor *@</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TienDo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TienDo)</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.DaHuy)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DaHuy)</dd>
        </div>

    </dl>

    <form asp-action="Delete" class="d-flex justify-content-end column-gap-2 mt-4">
        <input type="hidden" asp-for="MaDangKi" />

        <button type="submit" class="admin-delete-submit">
            Xoá đăng kí
        </button>

        <a asp-action="Index" class="admin-back-btn">
            Quay lại danh sách
        </a>
    </form>
</div>