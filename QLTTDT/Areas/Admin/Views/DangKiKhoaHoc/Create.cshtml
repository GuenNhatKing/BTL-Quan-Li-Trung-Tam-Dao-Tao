@model QLTTDT.Models.DangKiKhoaHoc

@{
    ViewData["Title"] = "Đăng kí khoá học";
}

<h4 class="admin-create-title">Đăng kí khoá học</h4>
<hr />

<div class="admin-create-container">
    <form asp-action="Create" class="admin-create-form">
        <div asp-validation-summary="ModelOnly" class="text-danger admin-create-validation"></div>
        <div class="form-group admin-create-group">
            <label asp-for="MaHocVien" class="admin-create-label">Học viên</label>
            <select asp-for="MaHocVien" class="admin-create-select" asp-items="ViewBag.MaHocVien"></select>
            <span asp-validation-for="MaHocVien" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="MaKhoaHoc" class="admin-create-label">Khoá học</label>
            <select asp-for="MaKhoaHoc" class="admin-create-select" asp-items="ViewBag.MaKhoaHoc"></select>
            <span asp-validation-for="MaKhoaHoc" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <input type="submit" value="Đăng kí" class="admin-create-submit" />
            <a asp-action="Index" class="admin-create-back">← Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}