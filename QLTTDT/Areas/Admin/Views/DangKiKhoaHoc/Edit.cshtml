@model QLTTDT.Models.DangKiKhoaHoc

@{
    ViewData["Title"] = "Chỉnh sửa đăng kí";
}

<h4 class="admin-create-title">Chỉnh sửa đăng kí khoá học</h4>
<hr />

<div class="admin-create-container">
    <form asp-action="Edit" class="admin-create-form">

        <div asp-validation-summary="ModelOnly" class="text-danger admin-create-validation"></div>
        <input type="hidden" asp-for="MaDangKi" />

        <div class="form-group admin-create-group">
            <label class="admin-create-label">Học viên</label>
            <input value="@ViewBag.MaHocVien" class="admin-create-input" readonly />
        </div>

        <div class="form-group admin-create-group">
            <label class="admin-create-label">Khoá học</label>
            <input value="@ViewBag.MaKhoaHoc" class="admin-create-input" readonly />
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="ThoiGianDangKi" class="admin-create-label">Thời gian đăng kí</label>
            @* Using type="datetime-local" or "date" + "time" inputs might be better for usability *@
            <input asp-for="ThoiGianDangKi" type="datetime-local" class="admin-create-input" />
            <span asp-validation-for="ThoiGianDangKi" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <label asp-for="TienDo" class="admin-create-label">Tiến độ (%)</label>
            <input asp-for="TienDo" class="admin-create-input" />
            <span asp-validation-for="TienDo" class="text-danger admin-create-validation"></span>
        </div>

        @* Field for DaHuy (Boolean) *@
        <div class="form-group admin-create-group">
            <label asp-for="DaHuy" class="admin-create-label">Đã hủy</label>
            <select asp-for="DaHuy" class="admin-create-select">
                <option value="False">Chưa hủy</option>
                <option value="True">Đã hủy</option>
            </select>
            <span asp-validation-for="DaHuy" class="text-danger admin-create-validation"></span>
        </div>


        <div class="form-group admin-create-group">
            <input type="submit" value="Lưu thay đổi" class="admin-create-submit" />
            <a asp-action="Index" class="admin-create-back">← Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}