@model QLTTDT.Models.CapDo
@{
    ViewData["Title"] = "Xoá cấp độ";
}
<div class="mb-3">
    <h4 class="fw-bold">Xoá cấp độ</h4>
    <hr />
</div>

<div class="card bg-white shadow p-4 rounded">
    <p class="text-danger fw-semibold">Bạn có chắc chắn muốn xoá cấp độ này không?</p>

    <dl class="row mb-0">

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TenCapDo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TenCapDo)</dd>
        </div>

    </dl>

    <form asp-action="Delete" class="d-flex justify-content-end column-gap-2 mt-4">
        <input type="hidden" asp-for="MaCapDo" />

        <button type="submit" class="admin-delete-submit">
             Xoá cấp độ
        </button>

        <a asp-action="Index" class="admin-back-btn">
            Quay lại danh sách
        </a>
    </form>
</div>