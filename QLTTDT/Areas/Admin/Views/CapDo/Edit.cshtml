@model QLTTDT.Models.CapDo

@{
    ViewData["Title"] = "Chỉnh sửa cấp độ";
}

<h4 class="admin-create-title">Chỉnh sửa cấp độ</h4>
<hr />

<div class="admin-create-container">
    <form asp-action="Edit" class="admin-create-form">

        <div asp-validation-summary="ModelOnly" class="text-danger admin-create-validation"></div>
        <input type="hidden" asp-for="MaCapDo" />

        <div class="form-group admin-create-group">
            <label asp-for="TenCapDo" class="admin-create-label">Tên cấp độ</label>
            <input asp-for="TenCapDo" class="admin-create-input" />
            <span asp-validation-for="TenCapDo" class="text-danger admin-create-validation"></span>
        </div>

        <div class="form-group admin-create-group">
            <input type="submit" value="Lưu thay đổi" class="admin-create-submit" />
            <a asp-action="Index" class="admin-create-back">← Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}