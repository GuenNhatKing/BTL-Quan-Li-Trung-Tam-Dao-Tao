}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>ChuDe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaChuDe" />
            <div class="form-group">
                <label asp-for="UrlAnhChuDe" class="control-label"></label>
                <input asp-for="UrlAnhChuDe" class="form-control" readonly />
            </div>
            <div class="graphic-cover">
                <img src="~/images/@Html.DisplayFor(i => i.UrlAnhChuDe)" />
            </div>
            <div class="form-group">
                <label name="AnhChuDe" class="control-label"></label>
                <input name="AnhChuDe" type="file" onchange="readImage(this);" class="form-control" data-val="false" />
            </div>
            <div class="graphic-cover">
                <img id="uploadedImage" src="#" style="display: none" />
            </div>
            <div class="form-group">
                <label asp-for="TenChuDe" class="control-label"></label>
                <input asp-for="TenChuDe" class="form-control" />
                <span asp-validation-for="TenChuDe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <textarea asp-for="MoTa" style="resize: none;" rows="4" cols="50"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
