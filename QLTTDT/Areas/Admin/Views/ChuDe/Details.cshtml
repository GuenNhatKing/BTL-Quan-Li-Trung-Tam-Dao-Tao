@model QLTTDT.Models.ChuDe
@{
    ViewData["Title"] = "Chi tiết chủ đề";
}
<div class="mb-3">
    <h4 class="fw-bold">Chi tiết chủ đề</h4>
    <hr />
</div>

<div class="card bg-white shadow p-4 rounded">
    <dl class="row mb-0">

        @* Display Image - Using Model.UrlAnhChuDe property *@
        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">Ảnh chủ đề</dt>
            <dd class="col-sm-9">
                <div class="graphic-cover mb-2">
                    @* Correct way to display image using Url.Content *@
                    <img src="@Url.Content("~/images/" + Model.UrlAnhChuDe)" alt="Ảnh chủ đề" class="img-thumbnail" style="max-width: 300px;" />
                </div>
                @Html.DisplayFor(model => model.UrlAnhChuDe)
            </dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TenChuDe)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TenChuDe)</dd>
        </div>

        <div class="row mb-3 border-bottom pb-2">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MoTa)</dt>
            @* Use white-space-pre-line if you want to preserve line breaks from the description *@
            <dd class="col-sm-9 white-space-pre-line">@Html.DisplayFor(model => model.MoTa)</dd>
        </div>

    </dl>

    <div class="d-flex justify-content-end column-gap-2 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.MaChuDe" class="admin-create-submit">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="admin-back-btn">
            <i class="fas fa-list"></i> Quay lại danh sách
        </a>
    </div>
</div>